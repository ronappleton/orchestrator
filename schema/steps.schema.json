{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workflow Step",
  "type": "object",
  "required": ["name", "action"],
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string", "minLength": 1},
    "action": {
      "type": "string",
      "minLength": 1,
      "enum": [
        "http",
        "ai_router.chat",
        "web.search",
        "web.extract",
        "memarch.store_fact",
        "memarch.search",
        "scm.call",
        "transform",
        "condition",
        "notify",
        "workspace.check",
        "policy.check"
      ]
    },
    "requires_approval": {"type": "boolean"},
    "retry": {
      "type": "object",
      "properties": {
        "max": {"type": "integer", "minimum": 0},
        "backoff_ms": {"type": "integer", "minimum": 0}
      }
    },
    "input": {
      "type": "object",
      "description": "Action-specific input payload"
    }
  }
}
